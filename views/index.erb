
<script type="text/javascript" src="/js/paper.js"></script>
<script type="text/paperscript" canvas="myCanvas">

  var path = new Path.Rectangle({
    point: [40,40],
    size: [40, 40],
    strokeColor: 'CC1600',
    strokeWidth: 2
  });

    function onFrame(event) {
      path.strokeColor.hue += 1;
      path.rotate(1);
  }
</script>
<div class="large-5 large-centered columns">
<canvas id="myCanvas" width='89', height='89'></canvas>
</div>
<div class="fixed" id="top_bar">
  <div class = "panel">
    <div class="row">
      <div class="large-10 large-centered columns">
        <div class="nav-bar right">
         <a href="/monolog/mood_analyzer?year=<%=@time.year%>&month=<%=@time.month%>">
            <button>Mood Analyzer</button></a>
          </div>
         <h1><a href="/monolog" class='monolog'>Monolog</a></h1>
      </div>
    </div>
  </div>
</div>


<div class="row" id="box">
  <div class="large-10 large-centered columns">
    <form action="/monolog" method = "post">
    <textarea name = "status" placeholder="What's on your mind?" rows='3'></textarea><button class="tiny button right" name="negative">negative</button><button class="tiny button right" name = "positive">positive</button><p class="text-right">I am feeling&nbsp</p>
  </form>
  </div>
</div>


<div class="row">

  <div class = "large-10 large-centered columns">
    <div class= 'select_mood'>
      <a href="/monolog/positive">Good Moments In My Life</a>
    </div>
    <div class= 'show_all'>
      <a href="/monolog">Show All</a>
    </div>
  </div>
</div>

<div class='row'>
  <div class = "large-10 large-centered columns">
    <article>
      <% @status.each do |status|%>
      <% time = Time.parse(status['time'])%>
      <h6><%= time.strftime("%b %d, %Y %I:%M%P")%></h6>
      <p>  <%= status['content']%> </P>
      <hr/>
      <%end%>
    </article>
  </div>
</div>

